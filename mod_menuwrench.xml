<?xml version="1.0" encoding="utf-8"?>
<install type="module"
         version="2.5"
         method="upgrade">
	<name>Menu Wrench</name>
	<creationDate>August 7, 2013</creationDate>
	<author>Matt Thomas</author>
	<authorUrl>http://betweenbrain.com</authorUrl>
	<copyright>Copyright (C) 2013 betweenbrain llc. All rights reserved.</copyright>
	<license>GNU General Public License version 3, or later.</license>
	<version>0.2</version>
	<description>MOD_MENU_WRENCH_DESC</description>

	<files>
		<filename module="mod_menuwrench">mod_menuwrench.php</filename>
		<filename>helper.php</filename>
		<folder>elements</folder>
		<folder>tmpl</folder>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_menuwrench.ini</language>
	</languages>

	<params addpath="/modules/mod_menuwrench/elements">
		<param name="parentItems"
		       type="menuitems"
		       label="MOD_MENU_WRENCH_PARENT_LABEL"
		       description="MOD_MENU_WRENCH_PARENT_DESC"/>
		<param name="depth"
		       type="text"
		       default="10"
		       label="MOD_MENU_WRENCH_DEPTH_LABEL"
		       description="MOD_MENU_WRENCH_DEPTH_DESC"/>
		<param name="alphaChildren"
		       type="list"
		       default=""
		       label="MOD_MENU_WRENCH_ALPHA_LABEL"
		       description="MOD_MENU_WRENCH_ALPHA_LABEL">
			<option value="">MOD_MENU_WRENCH_NO</option>
			<option value="1">MOD_MENU_WRENCH_YES</option>
		</param>
		<param name="columns"
		       type="text"
		       default="3"
		       label="MOD_MENU_WRENCH_COLUMNS_LABEL"
		       description="MOD_MENU_WRENCH_COLUMNS_DESC"/>
		<param name="moduleclass_sfx"
		       type="text"
		       default=""
		       label="Module Class Suffix"
		       description="PARAMMODULECLASSSUFFIX"/>
	</params>
</install>